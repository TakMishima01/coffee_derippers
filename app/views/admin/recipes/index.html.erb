
<div class="row">
  <!--===== sidebar start =====-->
    <%= render'layouts/admin_sidebar' %>
  <!--===== sidebar end =====-->
  <div class="col-10">
  <!--===== topbar start =====-->
    <%= render'layouts/admin_header' %>
  <!--===== sidebar end =====-->
  <!--===== recipe_index start =====-->
    <main class="contaner">
    <div class="row py-4">
      <div class="col-10">
        <h3 class="px-4">レシピ一覧</h3>
      </div>
    </div>
    <hr>
    <table class="table table-hover bg-white">
    <thead class="table-dark bg-secondary">
      <tr>
        <th scope="col">レシピID</th>
        <th scope="col">レシピ名</th>
        <th scope="col">ユーザー名</th>
        <th scope="col">投稿ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td>
            <%= recipe.id %>
          </td>
          <td class="text-dark">
            <%= link_to admin_recipe_path(recipe), class: "text-reset" do %>
            <%= recipe.name %>
            <% end %>
          </td>
          <td class="text-dark">
            <%= link_to admin_user_path(recipe.user_id), class: "text-reset" do %>
            <%= recipe.user.name %>
            <% end %>
          </td>
          <td>
            <% if recipe.status == false %>
              <div class="text-black-50 font-weight-bold"><%= recipe.status ? '公開' : '非公開' %></div>
            <% else %>
              <div class="text-success font-weight-bold"><%= recipe.status ? '公開' : '非公開' %></div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class ="mx-auto" style="width: 300px;">
    <%= paginate @recipes %>
  </div>
  </main>
  <!--===== recipe_index end =====-->
</div>

