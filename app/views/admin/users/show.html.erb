
<div class="row">
  <!--===== sidebar start =====-->
    <%= render'layouts/admin_sidebar' %>
  <!--===== sidebar end =====-->
  <div class="col-10">
  <!--===== topbar start =====-->
    <%= render'layouts/admin_header' %>
  <!--===== sidebar end =====-->
  <!--===== user_detail start =====-->
    <div class="container">
      <div class="row justify-content-center ">
        <h3 class="bg-light px-4">
          <%= @user.name %>さんの会員詳細
        </h3>
        <hr>
      </div>
      <div class="row">
        <table class="table table-borderless table-sm ml-5 mt-3 col-10 offset-2">
          <tbody>
            <tr>
              <th class="col-2">ユーザーID</th>
              <td class="col-8"><%= @user.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td>
                <%= @user.name %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td>
                <% if @user.is_deleted == false %>
                  <div class="text-success font-weight-bold"><%= @user.is_deleted ? '利用停止' : '有効' %></div>
                <% else %>
                  <div class="text-black-50 font-weight-bold"><%= @user.is_deleted ? '利用停止' : '有効' %></div>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>レシピ数</th>
              <td><%= @recipes.count %></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <div></div><br>
                <%= link_to '編集する', edit_admin_user_path(@user), class: "btn btn-success mr-5 px-4" %>
                <%= link_to 'コメント一覧を見る', class: "btn btn-primary px-4" %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <!--===== user_detail end =====-->
  <!--===== recipe_index start =====-->
    <hr>
    <div class="row py-4">
      <div class="col-10">
        <h3 class="px-4"><%= @user.name + "さんの" + "履歴一覧"%></h3>
      </div>
    </div>
    <table class="table table-hover bg-white col-10 offset-1">
    <thead class="table-dark bg-secondary">
      <tr>
        <th scope="col">レシピID</th>
        <th scope="col">レシピ名</th>
        <th scope="col">投稿ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td>
            <%= recipe.id %>
          </td>
          <td class="text-dark">
            <%= link_to admin_recipe_path(recipe), class: "text-reset" do %>
            <%= recipe.name %>
            <% end %>
          </td>
          <td>
            <% if recipe.status == false %>
              <div class="text-black-50 font-weight-bold"><%= recipe.status ? '公開' : '非公開' %></div>
            <% else %>
              <div class="text-success font-weight-bold"><%= recipe.status ? '公開' : '非公開' %></div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class ="mx-auto" style="width: 300px;">
    <%= paginate @recipes %>
  </div>
  <!--===== recipe_index end =====-->
</div>

