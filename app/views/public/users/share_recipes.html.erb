<div class="row">
  <!--===== sidebar start =====-->
      <%= render'layouts/sidebar' %>
  <!--===== sidebar end =====-->
    <div class="col-10 ps-0">
  <!--===== topbar start =====-->
      <%= render'layouts/header' %>
  <!--===== topbar end =====-->
  <main class="bg-light">
  <!--===== top_img start =====-->
<div class="card mb-3">
  <%= image_tag 'user_top.jpg', class: "top_img bd-placeholder-img bd-placeholder-img-lg", height:"200px";%>
  <div class="card-body user-header">
    <%= image_tag @user.get_user_image(90,90), class: "rounded-circle user-img" %>
    <h2 class="card-title user-header-name">@<%= @user.name %></h2>
  </div>
</div>
  <!--===== top_img end =====-->
  <!--===== tab start =====-->
  <div class="px-5">
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item" role="presentation">
          <%= link_to "レシピ", user_recipes_path, class: "nav-link border text-muted" %>
          <!--<a href="" id="tab1" class="nav-link active" role="tab" data-bs-toggle="tab" aria-selected="true"> レシピ </a>-->
        </li>
        <li class="nav-item" role="presentation">
          <%= link_to "公開レシピ", user_share_recipes_path, class: "nav-link active" %>
          <!--<a href="#photo2" id="tab2" class="nav-link" role="tab" data-bs-toggle="tab" aria-selected="false"> 公開レシピ </a>-->
        </li>
        <li class="nav-item" role="presentation">
          <%= link_to "フォロー", user_recipes_path, class: "nav-link border text-muted" %>
          <!--<a href="#photo3" id="tab3" class="nav-link" role="tab" data-bs-toggle="tab" aria-selected="false"> フォロー </a>-->
        </li>
        <li class="nav-item" role="presentation">
          <%= link_to "フォロワー", user_recipes_path, class: "nav-link border text-muted" %>
          <!--<a href="#photo4" id="tab4" class="nav-link" role="tab" data-bs-toggle="tab" aria-selected="false"> フォロワー </a>-->
        </li>
      </ul>

      <!-- 写真部分 -->
      <div class="tab-content border">
        <div id="recipe_index" class="container" role="tabpanel" aria-labelledby="tab1">
          <div class="row row-cols-1 row-cols-md-2 g-4 py-4 mx-auto">

          <% @recipes.each do |recipe| %>
            <%= link_to recipe_path(recipe) do %>

            <div class="card m-auto" style="max-width: 400px;">
              <div class="row g-0">
                <div class="col-md-5">
                  <%= image_tag recipe.get_image(170,170) %>
                </div>
                <div class="col-md-7">
                  <div class="card-body">
                    <h5 class="card-title"><%= recipe.name %></h5>
                    <p class="card-text"><%= recipe.point.truncate(21) %></p>
                    <p class="card-text"><small class="text-muted">作成日：<%= recipe.created_at.strftime('%Y/%m/%d') %></small></p>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
    </div>

        </div>
      <div class ="mx-auto mt-4" style="width: 300px;">
        <%= paginate @recipes, theme: 'bootstrap-5' %>
      </div>
      </div>
    </div>
  <!--===== tab end =====-->
  </main>
    </div>
    </div>

