<div class="row">
<!--sidebar-->
  <%= render'layouts/admin_sidebar' %>
  <div class="col-10 ps-0">
<!--header-->
  <%= render'layouts/admin_header' %>
  <%= render partial: 'layouts/flash' %>
<!--users_index-->
    <div class="container vh-100">
      <div class="row justify-content-center">
        <div class="col-lg-11 col-xl-10">
          <div class="page-header">
            <h3 class="px-4 mb-0 mt-5">ユーザー一覧</h3>
          </div>

          <hr>

          <table class="table table-hover col-10 offset-2 mx-auto">
            <thead class="table-dark bg-secondary">
              <tr>
                <th scope="col">ユーザーID</th>
                <th scope="col">名前</th>
                <th scope="col">メールアドレス</th>
                <th scope="col">ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= user.id %>
                  </td>
                  <td class="text-dark">
                    <%= link_to admin_user_path(user), class: "text-reset" do %>
                    <%= user.name %>
                    <% end %>
                  </td>
                  <td>
                    <%= user.email %>
                  </td>
                  <td>
                    <% if user.is_deleted == false %>
                      <div class="text-success fw-bold"><%= user.is_deleted ? '退会' : '有効' %></div>
                    <% else %>
                      <div class="text-black-50 fw-bold"><%= user.is_deleted ? '退会' : '有効' %></div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class ="mx-auto" style="width: 300px;">
            <%= paginate @users, theme: 'bootstrap-5' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

