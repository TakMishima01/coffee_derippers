
<div class="row">
  <!--===== sidebar start =====-->
  <div class="col-2 nav navbar-expand-lg navbar-dark sticky-top">
    <%= render'layouts/admin_sidebar' %>
  </div>
  <!--===== sidebar end =====-->
  <div class="col-8">
  <!--===== topbar start =====-->
    <%= render'layouts/admin_header' %>
  <!--===== sidebar end =====-->
  <!--===== user_edit start =====-->
    <div class="container">
      <div class="row">
        <div class="col-auto my-5">
          <h3 class="bg-light px-4">
            @<%= @user.name %> ユーザー情報編集
          </h3>
        </div>
      </div>
      <%= form_with model: @user, url: admin_user_path do |f| %>
        <div class="form-group row">
          <label class="col-form-label col-sm-3">ユーザーID</label>
          <div class="col-sm-4"><%= @user.id %></div>
        </div>

        <div class="form-group row">
          <%= f.label :ユーザー名, class: "col-form-label col-sm-3 " %>
          <div class="col-sm-4">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-form-label col-sm-3" %>
          <div class="col-sm-4">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :ステータス, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-5 form-check">
            <label class="font-weight-bold text-muted mr-4"><%= f.radio_button :is_deleted, false, {:checked => true}%> 有効</label>
            <label class="font-weight-bold text-muted"><%= f.radio_button :is_deleted, true %> 利用停止</label>
          </div>
        </div>

        <div class="row actions my-3">
          <div class="col-sm-3"></div>
          <div class="col-sm-3">
            <%= f.submit "変更を保存", class: "btn btn-success btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  <!--===== user_edit end =====-->
  </div>
</div
