<div class="row">
  <!--sidebar-->
  <%= render'layouts/sidebar' %>
  <div class="col-10 pl-0">
  <!--topbar-->
    <%= render'layouts/header' %>
    <%= render partial: 'layouts/flash' %>
    <main class="bg-light vh-100">
  <!--top_img-->
      <div class="card mb-3">
        <%= image_tag 'user_top.jpg', class: "top_img bd-placeholder-img bd-placeholder-img-lg", height:"250px";%>
        <div class="card-body">
          <h2 class="card-title">@<%= @user.name %></h2>
        </div>
      </div>
  <!--form-->
      <div class="container">
        <div class="row">
          <%= form_with model: @user, url: user_path(@user), class:"row g-4" do |f| %>
            <div class="col-4"></div>
            <div class="col-4">
              <%= f.label :ユーザー画像, for:"user_image" ,class: "form-label font-weight-bold fs-6 mt-3" %>
              <%= f.file_field :image, accept: "image/*", class: "form-control-file mb-1", id:"user_image" %>
            </div>
            <div class="col-4"></div>

            <div class="col-4"></div>
            <div class="col-4">
              <%= f.label :ユーザー名, for:"user_name", class: "form-label font-weight-bold fs-6 mt-3" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-1", id: "user_name" %>
            </div>
            <div class="col-4"></div>

            <div class="col-4"></div>
            <div class="col-4">
              <%= f.label :メールアドレス, for:"email", class: "form-label font-weight-bold fs-6 mt-3" %>
              <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-1", id: "email" %>
            </div>
            <div class="col-4"></div>


            <div class="col-4"></div>
            <div class="col-4 text-center my-5">
                <%= f.submit "変更を登録",data: {confirm: "登録しますか？"}, class: "btn btn-success btn-block px-5 mr-4 font-weight-bold" %>
            </div>
            <div class="col-4"></div>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>

