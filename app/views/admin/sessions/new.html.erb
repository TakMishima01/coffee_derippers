<div class="text-center mt-5 py-5">
  <%= render partial: 'layouts/flash' %>
  <main class="form-signin mt-5 py-5">
    <%= form_with model: @admin, url: admin_session_path, method: :post do |f| %>
      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="32" fill="currentColor" class="bi bi-cup mb-2" viewBox="0 0 16 16">
        <path d="M1 2a1 1 0 0 1 1-1h11a1 1 0 0 1 1 1v1h.5A1.5 1.5 0 0 1 16 4.5v7a1.5 1.5 0 0 1-1.5 1.5h-.55a2.5 2.5 0 0 1-2.45 2h-8A2.5 2.5 0 0 1 1 12.5V2zm13 10h.5a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.5-.5H14v8zM13 2H2v10.5A1.5 1.5 0 0 0 3.5 14h8a1.5 1.5 0 0 0 1.5-1.5V2z"/>
      </svg>
      <h1 class="h3 mb-3 fw-nomal">管理者ログイン</h1>
      <div class="form-floating">

        <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
        <%= f.label :email, for: "floatingInput" %>
      </div>

      <div class="form-floating">

        <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password" %>
        <%= f.label :password, for: "floatingPassword" %>
      </div>

      <div class="actions my-3">
        <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </main>
</div>





