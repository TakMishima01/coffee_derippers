<%- if controller_name != 'sessions' %>
  <%= link_to "登録済みの方はこちら", new_session_path(resource_name), class: "btn btn-warning warning-600 mt-3 w-100" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "アカウント登録はこちら", new_registration_path(resource_name), class: "btn btn-warning warning-600 mt-3 w-100" %><br />
<% end %>