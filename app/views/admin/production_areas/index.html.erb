
<div class="row">
  <!--===== sidebar start =====-->
    <%= render'layouts/admin_sidebar' %>
  <!--===== sidebar end =====-->
  <div class="col-10">
  <!--===== topbar start =====-->
    <%= render'layouts/admin_header' %>
  <!--===== sidebar end =====-->
  <!--===== main start =====-->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-11 col-xl-10">
          <div class="page-header">
            <h3 class="px-4">産地一覧・追加</h3>
          </div>

          <%= form_with model: @production_area, url: admin_production_areas_path, class: "form-inline", local: true do |f| %>
            <div class="form-group my-3">
              <label class="mr-3">産地名</label>
              <%= f.text_field :name, class: "form-control mr-3" %>
            </div>
            <%= f.submit '新規登録', class: "btn btn-success"%>
          <% end %>



  <div class="row pt-3">
    <div class="col-5">
      <table class="table table-hover mb-5">
        <thead class="thead-light">
          <tr>
            <th scope="col">
              <div class="text-center">産地</div>
            </th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @production_areas.each do |production_area| %>
          <tbody>
            <tr>
              <td>
                <%= production_area.name %>
              </td>
              <td>
                <div class="text-right">
                  <%= link_to '編集する', edit_admin_production_area_path(production_area), class: "btn btn-success" %>
                </div>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
  </div>
      </div>
    </div>
  <!--===== main end =====-->
  </div>
</div>

