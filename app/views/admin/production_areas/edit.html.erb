<div class="row">
<!--sidebar-->
  <%= render'layouts/admin_sidebar' %>
  <div class="col-10 ps-0">
<!--header-->
    <%= render'layouts/admin_header' %>
    <%= render partial: 'layouts/flash' %>
    <main class="vh-100">
<!--production_area_edit-->
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-11 col-xl-10">
            <div class="page-header">
              <h3 class="px-4 mb-0 mt-5">産地編集</h3>
            </div>
          </div>
        </div>

        <hr>

        <div class="row mt-4 mb-5">
          <div class="col-5 ms-3">
            <%= form_with model: @production_area, url: admin_production_area_path(@production_area), class: "form-inline", local: true do |f| %>
              <div class="form-group my-3">
                <label class="mr-3">産地名</label>
                <%= f.text_field :name, class: "form-control mr-3" %>
              </div>
              <%= f.submit '変更を保存',data: {confirm: "登録しますか？"}, class: "btn btn-success"%>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

