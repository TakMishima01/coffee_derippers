<div class="row">
<!--sidebar-->
  <%= render'layouts/admin_sidebar' %>
  <div class="col-10 ps-0">
<!--header-->
    <%= render'layouts/admin_header' %>
    <%= render partial: 'layouts/flash' %>
    <main class="vh-100">
<!--recipe_index-->
      <div class="contaner">
        <div class="row justify-content-center">
          <div class="col-lg-11 col-xl-10">
            <div class="page-header">
              <h3 class="px-4 mb-0 mt-5">レシピ一覧</h3>
            </div>

            <hr>

            <table class="table table-hover col-10 offset-2 mx-auto">
              <thead class="table-dark bg-secondary">
                <tr>
                  <th scope="col">レシピID</th>
                  <th scope="col">レシピ名</th>
                  <th scope="col">ユーザー名</th>
                  <th scope="col">投稿ステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @recipes.each do |recipe| %>
                  <tr>
                    <td>
                      <%= recipe.id %>
                    </td>
                    <td class="text-dark">
                      <%= link_to admin_recipe_path(recipe), class: "text-reset" do %>
                      <%= recipe.name %>
                      <% end %>
                    </td>
                    <td class="text-dark">
                      <%= link_to admin_user_path(recipe.user_id), class: "text-reset" do %>
                      <%= recipe.user.name %>
                      <% end %>
                    </td>
                    <td>
                      <% if recipe.status == false %>
                        <div class="text-black-50 fw-bold"><%= recipe.status ? '公開' : '非公開' %></div>
                      <% else %>
                        <div class="text-success fw-bold"><%= recipe.status ? '公開' : '非公開' %></div>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class ="mx-auto" style="width: 300px;">
              <%= paginate @recipes %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
