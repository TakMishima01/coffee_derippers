<div class="tab-content border bg-white shadow-sm">
  <div class="container">
    <div class="row py-4 mx-auto">
      <% @users.each do |user| %>
        <%= link_to user_share_recipes_path(user), class:"mb-3" do %>
          <div class="card m-auto shadow-sm h-100" style="max-width: 450px;">
            <div class="row no-gutters">
              <div class="col-md-5">
                <%= image_tag user.get_user_image(90,90), height: "100%" %>
              </div>
              <div class="col-md-7 pl-1">
                <div class="card-body px-0">
                  <h5 class="card-title text-nowrap pr-5">@<%= user.name %></h5>
                </div>
              </div>
            </div>
          </div>
        <% end%>
      <% end %>
    </div>
  </div>
  <div class ="mx-auto mt-4" style="width: 300px;">
    <%= paginate @users %>
  </div>
</div>