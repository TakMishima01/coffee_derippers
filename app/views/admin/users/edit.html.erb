<div class="row">
<!--sidebar-->
  <%= render'layouts/admin_sidebar' %>
  <div class="col-10 pl-0">
<!--header-->
  <%= render'layouts/admin_header' %>
  <%= render partial: 'layouts/flash' %>
<!--user_edit-->
    <div class="container vh-100">
      <div class="row">
        <div class="col-auto my-5">
          <h3 class="px-4">
            @<%= @user.name %> ユーザー情報編集
          </h3>
        </div>
      </div>
      <%= form_with model: @user, url: admin_user_path do |f| %>
        <div class="form-group row mb-2">
          <label class="col-form-label col-sm-3">ユーザーID</label>
          <div class="col-sm-4 my-auto"><%= @user.id %></div>
          <div class="col-5"></div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label :ユーザー名, class: "col-form-label col-3 " %>
          <div class="col-4">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
          <div class="col-5"></div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label :メールアドレス, class: "col-form-label col-sm-3" %>
          <div class="col-sm-4">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="col-5"></div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label :ステータス, class: "col-sm-3 col-form-label" %>
          <div class="col-sm-5 form-check my-auto">
            <label class="font-weight-bold text-muted mr-4"><%= f.radio_button :is_deleted, false %> 有効</label>
            <label class="font-weight-bold text-muted"><%= f.radio_button :is_deleted, true %> 利用停止</label>
          </div>
          <div class="col-4"></div>
        </div>

        <div class="row actions my-3">
          <div class="col-3"></div>
          <div class="col-3">
            <%= f.submit "変更を保存",data: {confirm: "登録しますか？"}, class: "btn btn-success btn-block" %>
          </div>
          <div class="col-6"></div>
        </div>
      <% end %>
    </div>
  </div>
</div
